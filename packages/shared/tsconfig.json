{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}