{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": false,
		"baseUrl": ".",
		"paths": {
			"@freedivah/shared": [
				"../shared"
			]
		}
	},
	"references": [
		{
			"path": "../shared"
		}
	],
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}