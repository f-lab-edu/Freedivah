{
	"name": "freedivah",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/f-lab-edu/Freedivah.git",
	"author": "jiaah <25231717+jiaah@users.noreply.github.com>",
	"license": "MIT",
	"packageManager": "yarn@4.5.1",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build:shared": "yarn workspace @freedivah/shared build",
		"dev:web": "yarn workspace @freedivah/web dev",
		"dev:api": "yarn workspace @freedivah/api dev",
		"dev:shared": "yarn workspace @freedivah/shared dev",
		"dev": "concurrently \"yarn build:shared\" \"yarn dev:web\"",
		"dev:all": "concurrently \"yarn dev:shared\" \"yarn dev:web\" \"yarn dev:api\"",
		"build:all": "yarn build:shared && concurrently \"yarn workspace @freedivah/web build\" \"yarn workspace @freedivah/api build\"",
		"test": "yarn workspaces run test",
		"test:coverage": "yarn workspaces run test:coverage",
		"test:web": "yarn workspace @freedivah/web test",
		"test:api": "yarn workspace @freedivah/api test",
		"test:shared": "yarn workspace @freedivah/shared test",
		"test:web:watch": "yarn workspace @freedivah/web test:watch",
		"test:api:watch": "yarn workspace @freedivah/api test:watch",
		"test:shared:watch": "yarn workspace @freedivah/shared test:watch"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.6.3",
		"@types/jest": "^29.5.14",
		"@types/node": "^20",
		"@typescript-eslint/eslint-plugin": "^8.14.0",
		"@typescript-eslint/parser": "^8.14.0",
		"concurrently": "^9.1.0",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.2.1",
		"jest": "^29.7.0",
		"prettier": "^3.3.3",
		"typescript": "^5"
	}
}
